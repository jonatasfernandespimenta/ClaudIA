// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Checkpoint {
  id          String   @id
  projectName String
  summary     String
  createdAt   DateTime @default(now())
}

model Reminder {
  id        String   @id
  message   String
  status    String   @default("PENDING")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CalendarAccount {
  id          String   @id
  provider    String
  accountId   String
  credentials String
  createdAt   DateTime @default(now())
  events      CalendarEventCache[]
}

model CalendarEventCache {
  id         String   @id
  calendarId String
  eventId    String
  title      String
  description String?
  startTime  DateTime
  endTime    DateTime
  source     String
  isAllDay   Boolean
  calendar   CalendarAccount @relation(fields: [calendarId], references: [id])
}
